<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <log4net>
    <appender name="TraceAppender" type="log4net.Appender.TraceAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %level %logger - %message%newline%exception" />
      </layout>
    </appender>
    <appender name="Papertrail" type="log4net.Appender.RemoteSyslogAppender">
      <facility value="Local6" />
      <identity value="%date{yyyy-MM-ddTHH:mm:ss.ffffffzzz} %P{log4net:HostName} DnsRip" />
      <layout type="log4net.Layout.PatternLayout" value="%level %logger - %message%newline%exception" />
      <remoteAddress value="logs4.papertrailapp.com" />
      <remotePort value="10955" />
    </appender>
    <root>
      <level value="DEBUG" />
      <appender-ref ref="TraceAppender" />
      <appender-ref ref="Papertrail" />
    </root>
  </log4net>
